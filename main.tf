##################################################################################
# CONFIGURATION (for Terraform > 0.12)
##################################################################################

terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 3.0"
    }
  }
}

##################################################################################
# PROVIDERS
##################################################################################

provider "aws" {
  region = var.region
}

##########################################################################
# DATA
##########################################################################

data "aws_caller_identity" "current" {}

data "aws_kms_key" "kms-s3-key" {
  key_id = "alias/osada/s3"
}
